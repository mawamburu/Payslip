// program that computes a payslip
#include <stdio.h>
#include <stdbool.h>

int main ()
{
    float hours,rate,normalpay, overtime pay,taxpay,netincome;
    while (true)
    {
        printf ("Enter number of hours worked (-1to end):");
        scanf ("%f",&hours);
        if(hours==-1)
        {
            return 0;
        }
        printf ("Enter hourly rate of ksh.1000.00");
        scanf ("%f",&rate);
        salary =hours * rate;
        if (hours<=40)
        {
            printf ("salary is %3\n", salary);
        }
        if ("hours>40")
        {
            overtime=hours-40;
            overtimepay =overtime*rate /1.5;
            salary=salary+overtimepay
printf ("salary is %.3f\n"salary);
        }
    }
    return 0;
} 
